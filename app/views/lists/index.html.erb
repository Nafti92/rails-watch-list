<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://dirprodformations.fr/wp-content/uploads/2017/08/salle-cinema-3.jpg);">
  <div class="container">
    <h1><strong>Save any kind of movies</strong>! </h1>
     <%= link_to "Add a new list", new_list_path(@bookmark), class:"btn btn-gradient" %>
         <span class="click">
          </span>
  </div>
</div>
<div class="movie-category">
  <h1 class="category-title">MY LISTS :</h1>
</div>




  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-3 bg-success m-3">
      <h3 class="list-title"><%= link_to list.name, list_path(list) %></h3>
      <p><%= link_to "Delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure" }, class: 'btn-delete'%></p>

    </div>
      <% end %>
  </div>
